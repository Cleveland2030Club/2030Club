<div class="row">
  <section class="span9">
    <h1>Upcoming Events</h1>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Date</th>
          <th>Max Attendees</th>
          <th>Registered</th>
          <th>Actions</th>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.id %></td>
            <td><%= link_to event.name, admin_event_path(event) %></td>
            <td><%= event.start_at.strftime('%h %d, %Y') %></td>
            <td><%= event.max_attendance %></td>
            <td><%= event.attendee_count %></td>
            <td>
              <div class="btn-group">
                <%= link_to 'edit', edit_admin_event_path(event), :class => "btn btn-primary" %>
                <%= link_to 'delete', admin_event_path(event), :method => :delete,
                                      :confirm => 'Are you sure? This cannot be undone', :class => 'btn btn-danger' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
  <section class="quick-links span3">
    <h1>Quick Links</h1>
    <ul>
      <li>Past Events</li>
    </ul>
  </section>
</div>