<div class="row">
  <section class="span9">
    <h1><%= @title %></h1>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Date</th>
          <th>Max Attendees</th>
          <th>Registered</th>
          <th>Actions</th>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.id %></td>
            <td><%= link_to truncate(event.name, length: 50), admin_event_path(event) %></td>
            <td><%= event.start_at.strftime('%h %d, %Y') %></td>
            <td><%= event.max_attendance %></td>
            <td><%= event.attendee_count %></td>
            <td>
              <div class="btn-group">
                <%= link_to 'edit', edit_admin_event_path(event), :class => "btn btn-primary" %>
                <%= link_to 'delete', admin_event_path(event), :method => :delete,
                                      :confirm => 'Are you sure? This cannot be undone', :class => 'btn btn-danger' %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <section class="span9">
      <%= link_to 'Add New Event', new_admin_event_path, :class => "btn btn-success" %>
    </section>
  </section>
  <section class="quick-links span3">
    <h1>Quick Links</h1>
    <ul>
      <li><%= link_to 'Upcoming Events', admin_events_path %></li>
      <li><%= link_to 'Past Events', past_admin_events_path %></li>
    </ul>
  </section>
</div>
