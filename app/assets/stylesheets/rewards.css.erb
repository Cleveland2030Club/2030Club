div.twoColumns-0, div.twoColumns-1{ float: left; }
div.twoColumns-1 { padding:50px 0 0 40px;width:250px; }
div.twoColumns-0 { width:625px; }
.sub-tabs { padding:20px 0 0 15px; z-index:1;}
.sub-tabs .tiny {padding-right:5px;}
.sub-tabs a { border:1px solid #ccc; padding:7px 8px 12px; -moz-border-radius-topright:5px;-moz-border-radius-topleft:5px;-webkit-border-top-right-radius:5px;-webkit-border-top-left-radius:5px; }
.sub-tabs a.active { border-bottom:1px solid #fff; background:#fff; border-top:3px solid #417EB5;}
.sub-nav { padding:20px 60px 20px 15px; background-image:url(<%= asset_path 'subnav-background3.gif' %>); background-repeat:no-repeat; background-position:0 top; }
.sub-nav li { list-style-type:none; } 
.sub-nav li a { display:block; padding:6px 10px 6px 12px; border-bottom:1px solid #fff; }
.sub-nav li a.active {background-color:#e5f2f8;background-image:url(<%= asset_path 'arrows-right.gif' %>);background-repeat:no-repeat;background-position:95% center;}
h2{font-size:114%;background:#e5f2f8;padding:.4em 0 .4em 1em;display:block;-moz-border-radius:5px;-webkit-border-radius:5px;}
.company-list {float:left;}
.company-list li{
float:left;
list-style-type:none;
margin-right:4%;
width:90%;
}
.company-list li:nth-child(odd) { clear:left; }
.company-list li:nth-child(even) { margin-right:0; }
.company {margin:0 0 20px; padding:0;}
.company:after, .bd:after {
clear: both;
display: block;
visibility: hidden;
overflow: hidden;
height: 0 !important;
line-height: 0;
font-size: xx-large;
content:" x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x x ";
}
.company .company-info {
display:table-cell;
zoom: 1;
}
.company .company-info > :first-child {margin-top:0;}
.company .company-info > :last-child {margin-bottom:0;}
.company .show { padding-left:15px; }
.company .company-name { font-size:108%; }
.company .company-logo {float:left; margin-right: 10px;}
.company .company-meta {margin:10px 0;}
.company .company-meta strong {font-size:84%;color:#999; width:55px;float:left;}
.company .company-logo img {display: block;}
.company .compExt {float:right; /*margin-left: 10px;*/}
.company .deal {margin-bottom:1em;}
.company .located {margin-bottom:1em;}

/*- IE6, IE7
----------------------------------------------------------------------*/
.ie6 .company .company-info {
display:inline;
}