<div class="row">
  <section class= "span9">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Participant</th>
          <th>Category</th>
          <th>Benefit Summary</th>
          <th>Actions</th>
        </tr>
      </thead>
      <% unless @participants.empty? %>
        <tbody>
          <% @participants.each do | participant | %>
            <tr>
              <td><%= link_to participant.name, admin_participant_path(participant) %></td>
              <td><%= participant.category.name unless participant.category.nil? %></td>
              <td><%= truncate(participant.benefit, :length => 50) %></td>
              <td>
                <div class="btn-group">
                  <%= link_to 'edit', edit_admin_participant_path(participant), :class => "btn btn-primary" %>
                  <%= link_to 'delete', admin_participant_path(participant), :method => :delete,
                                        :confirm => 'Are you sure? This cannot be undone', :class => 'btn btn-danger' %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      <% end %>
    </table>
  <%= link_to 'Add New Participant', new_admin_participant_path, :class => "btn btn-success" %>
  </section>
  <div class="span3">
    <section>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Region</th>
            <th>Actions</th>
          </tr>
        </thead>
        <% unless @regions.empty? %>
          <tbody>
            <% @regions.each do |region| %>
              <tr>
                <td><%= region.name %></td>
                <td>
                  <div class="btn-group">
                    <%= link_to "edit", edit_admin_region_path(region), :class=> "btn btn-primary" %>
                    <%= link_to "delete", admin_region_path(region), :method => :delete, :confirm => "Are you sure?", :class => "btn btn-danger" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        <% end %>
    </table>
      <%= link_to "Add Region", new_admin_region_path, :class => "btn btn-success" %>
    </section>
    <section class="categories">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Categories</th>
            <th>Actions</th>
          </tr>
        </thead>
        <% unless @categories.empty? %>
          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
                <td>
                  <div class="btn-group">
                    <%= link_to "edit", edit_admin_category_path(category), :class => "btn btn-primary" %>
                    <%= link_to "delete", admin_category_path(category), :method => :delete, :confirm => "Are you sure?", :class=> "btn btn-danger"%>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        <% end %>
      </table>
      <%= link_to "Add Category", new_admin_category_path, :class=> "btn btn-success" %>
    </section>
  </div>
</div>
