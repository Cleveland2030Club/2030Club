<% form_for @guest, :url => {:controller => 'guests', :action => 'create'}, :html => {:class => 'rsvp'} do |guest| %>
  <%= hidden_field_tag 'event_id', @event.id %>  
    
  <fieldset>
    <legend>
	    <span>
		    <strong>RSVP for this Event</strong>
	    </span>
    </legend>
    <div class="form-node disabled first">
      <input type="radio" name="member" value="true" disabled id="members" class="radio" /> <label for="members" class="radio member">RSVP as a Member</label>
    </div>
    <div class="form-node">
      <p class="notice">You must <%= link_to "log in", new_user_session_path %> before you can register as a member!</p>
    </div>
    <div class="form-node">
      <input type="radio" name="member" value="false" checked id="nonmembers" class="radio"/> <label for="nonmembers" class="radio non-member">RSVP as a Non-Member</label>
    </div>
    <%= guest.error_messages %>
    <div class="form-node">
  	  <%= guest.label :first_name %>
	    <%= guest.text_field :first_name %>
    </div>
    <div class="form-node">
      <%= guest.label :last_name %>
      <%= guest.text_field :last_name %>
    </div>
    <div class="form-node">
      <%= guest.label :email %>
      <%= guest.text_field :email %>
    </div>
    <div class="formAction">
      <%= guest.submit "Continue" %>
    </div>
  </fieldset>
<% end %>