<% if current_user.nil? %>
  <div class="form-node">
    <p class="notice">You must <%= link_to "log in", new_user_session_path %> before you can register as a member!</p>
  </div>
<% elsif current_user_expired? %>
  <div class="form-node">
    <p class="notice">You must <%= link_to "renew your membership", "#" %> to get the club price.</p>
  </div>
<% end %>